{
    globals: {
        $: true,
        jQuery: true,
    },
    plugins: [
        react
    ],
    settings: {
        react: {
            version: detect,
        }
    },
    parser: babel-eslint,
    parserOptions: {
        ecmaVersion: 6,
        sourceType: module,
        browser: true,
        ecmaFeatures: {
            jsx: true,
            experimentalObjectRestSpread: true
        }
    },
    env: {
        es6:     true,
        browser: true,
        node:    true,
    },
    extends: [
        eslint:recommended,
        plugin:react/recommended
    ],
    rules: {
        strict:             [ 0, safe ],
        no-debugger:        1,
        brace-style: [
            2,
            1tbs,
            { allowSingleLine: true }
        ],
        no-trailing-spaces: 2,
        keyword-spacing:    0,
        space-before-function-paren: [ 2, never ],
        spaced-comment:     [0, always ],
        vars-on-top:        0,
        no-undef:           2,
        no-undefined:       2,
        comma-dangle:       [ 0, always-multiline ],
        quotes:             [ 0, single ],
        semi:               [ 0, never ],
        guard-for-in:       2,
        no-eval:            2,
        no-with:            2,
        valid-typeof:       2,
        no-unused-vars:     2,
        no-continue:        1,
        no-extra-semi:      1,
        no-unreachable:     1,
         no-unused-expressions: [2, { allowShortCircuit: true }],
        no-magic-numbers:   0,
        no-console:         0,
        max-len:            [1, 120, 4],
        react/prefer-es6-class: 1,
        react/prop-types:   0,
    }
}

